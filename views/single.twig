
{% extends 'layout.twig' %}
{% block content %}
<div class="blog-single">
  <article class="blog-single__container {{ post.slug }}" id="post-{{ post.ID }}">
    <section class="blog-single__content">
      <h1 class="article-h1">{{ post.title }}</h1>
      <p class="blog-single__author"><span>By&amp;</span><a href="{{ post.author.path }}">{{ post.author.name }}</a><span>&bull;&amp;</span>{{ post.post_date | date }}</p>
      <div class="blog-single__content">{{ post.content }}</div>
    </section>{{% if post.comment_status !='closed' %}}
    <section class="blog-single__comments">
      <div class="blog-single__comment-form">
        <h3 class="h2">Comments</h3>{{ fn('comment_form') }}
      </div>
      <div class="blog-single__comment-responses">
        {% for cmt in post.get_comments() %}
        {% include 'components/comment.twig' with { comment:cmt } %}
        {% endfor %}
      </div>
    </section>{% endif %}
  </article>
</div>{% endblock %}