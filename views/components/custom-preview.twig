
<article class="custom-preview tease tease-{{ post.post_type }}" id="tease-{{ post.ID }}">{% block content %}
  <h2 class="custom-preview__title"><a href="{{ post.link }}">{{ post.title }}</a></h2>
  <p class="custom-preview__copy">{{ post.get_preview }}</p>{% if post.get_thumbnail %}<img class="custom-preview__image" src="{{ post.thumbnail.src }}"/>
  {% endif %}
  {% endblock %}
</article>