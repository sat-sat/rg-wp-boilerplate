      //-   | {% include 'components/nav-mobile.twig' %}
      | {% endblock %}

    main.main-content(role='main')
      //- | {% if title %}
      //- h1 {{title}}
      //- | {% endif %}
      .main-content__container(class='{{sidebar_class}}')
        | {% block content %}
