    | {{ function('wp_head') }}

  body(class='{{body_class}} {{ post.slug }}' data-template='base.twig')
    span.svg-sprite
      | {% include '/icons/color.svg' %}
      | {% include '/icons/no-color.svg' %}

    header(class='header')
      | {% block header %}
      .nav-desktop
        | {% include 'components/nav-desktop.twig' %}
