        | {% endblock %}
      | {% if sidebar %}
      aside.layout-sidebar
        | {{sidebar}}
      | {% endif %}

    | {% block footer %}
    footer#footer
      | {% include 'components/footer-main.twig' %}
    | {{ function('wp_footer') }}
    | {% endblock %}
