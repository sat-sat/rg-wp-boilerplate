| {% if menu %}
ul.nav-desktop__nav
	| {% for item in menu %}
	li(class='{{ item.classes | join(\' \') }} {{ item.slug }}')
		a(href='{{ item.get_link }}') {{ item.title }}
		| {% if item.get_children %}

		ul.nav-desktop__sub-nav
			| {% for child in item.get_children %}
			li(class='{{ child.classes | join(\' \') }}')
				a(href='{{ child.get_link }}') {{ child.title }}
			| {% endfor %}
		| {% endif %}

	| {% endfor %}
| {% endif %}