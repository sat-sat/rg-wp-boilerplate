article.custom-preview(id='tease-{{ post.ID }}' class='tease tease-{{ post.post_type }}')

	| {% block content %}
	h2.custom-preview__title
		a(href='{{ post.link }}')
			| {{ post.title }}
	p.custom-preview__copy
		| {{ post.get_preview }}
	| {% if post.get_thumbnail %}
	img.custom-preview__image(src='{{ post.thumbnail.src }}')
	| {% endif %}
	| {% endblock %}